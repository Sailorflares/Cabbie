<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <ul class="nav nav-pills">
    <li role="presentation" class="active"><a href="<%= root_path %>">Home</a></li>
    <% if !user_signed_in? %>
      <li role="presentation" class=""><a href="<%= signup_path %>">Sign Up</a></li>
      <li role="presentation"><a href="/login">Log In</a></li>
    <% else %>
      <p class="navbar-text navbar-right"><%= "Hello, #{current_user.name}!" %></p>
      <li role="presentation"><a href="<%= user_path(current_user) %>">Your Reviews</a></li>
      <li role="presentation"><a href="/logout">Log Out</a></li>
    <% end %>
    </ul>
  </div>
</nav>

<% if notice  %>
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    <%= notice %>
  </div>
<% end %>  