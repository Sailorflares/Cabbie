

<div class="container">
  <h1><%= @driver.driver_name %></h1><br>
  <h3>Average Rating: </h3>
  <h3>Number of Reviews: <%= @driver.ride_reviews.size %></h3>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-6" style="margin:50px;">
      <h2>Reviews for <%= @driver.driver_name %>:</h2><br>
      <% @driver.ride_reviews.reverse.each do |rev| %>
        <h5><%= rev.user.name %> <%= rev.created_at.localtime.strftime("at %I:%M%p on %m/%d/%Y") %></h5>
        <p>Rating: <%= rev.star_rating %></p>
        <p>Review: <%= rev.comments %></p>
      <% end %>
    </div>

    <div class="col-md-3" style="margin: 50px;">
      <h3>Write a Review for <%= @driver.driver_name %>:</h3><br>
      <%= form_for([@user, RideReview.new]) do |f| %>
        <p><%= f.number_field :star_rating, :placeholder => "Rate your driver", :autofocus => false%></p>
        <p><%= text_area(:comments, :placeholder => "Add a comment", :class => "form-control", :rows => 3)%></p>
           <%= f.hidden_field :driver_id, :value => @driver.id %>
        <p><%= f.submit %></p>
      <% end %>
    </div>
  </div>
</div>





<%#= link_to "Ride Review show page", user_ride_review_path(@user) %>