<div class="container">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4" style="margin-top:-1%;" >
      <%= form_tag sessions_path, :class => 'form-signin', :role => "form" %>
      <h2 class ="form-signin-heading"> Log In: </h2>
        <%= label_tag :email, nil, class: "sr-only" %>
        <%= email_field_tag :email, nil, class: "form-control", placeholder: "Email", :autofocus => true, style: "width:75%;margin:auto;"%><br>
        <%= label_tag :password, nil, class: "sr-only" %>
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password", style: "width:75%;margin:auto;" %><br>
        <%= submit_tag "Log In", {:class => "btn btn-cta btn-cta-primary", :style => "width:75%;margin-left:12.5%;"}%>
    </div>
  </div> 
</div>