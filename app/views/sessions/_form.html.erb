<div class="container">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <%= form_tag sessions_path, :class => 'form-signin', :role => "form" %>
      <h2 class ="form-signin-heading"> Please Sign In </h2>
        <%= label_tag :email, nil, class: "sr-only" %>
        <%= email_field_tag :email, nil, class: "form-control", placeholder: "Email" %><br>
        <%= label_tag :password, nil, class: "sr-only" %>
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %><br>
        <%= submit_tag "Log In", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
    <div class="col-md-4">
    </div>
  </div> 
</div>